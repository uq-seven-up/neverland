{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react",
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/*.tsx",
    "./src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
